<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewBag.Title - Ecommerce Dashboard</title>
    <link rel="stylesheet" href="~/css/dashboard.css">
    <link rel="stylesheet" href="~/css/custome.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kit.fontawesome.com/26ef36b519.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.8.0/fonts/remixicon.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <!-- Side Navigation -->
    <nav class="side-nav" id="sideNav">
        <div class="nav-header">
            <div class="logo">NAKHLA</div>
            <button class="nav-close" id="navClose">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="nav-section">Dashboard</div>
        <a href="@Url.Action("Index", "Dashboard")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
            <i class="fas fa-chart-line"></i>
            <span>Overview</span>
        </a>

        <div class="nav-section">Sales</div>
        <a href="@Url.Action("Index", "Orders")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")">
            <i class="fas fa-box"></i>
            <span>Orders</span>
            <span class="nav-badge">24</span>
        </a>
        <a href="@Url.Action("Index", "Customers")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customers" ? "active" : "")">
            <i class="fas fa-users"></i>
            <span>Customers</span>
        </a>

        <div class="nav-section">Catalog</div>
        <a href="@Url.Action("Index", "Products")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")">
            <i class="fas fa-shopping-bag"></i>
            <span>Products</span>
        </a>
        <a href="@Url.Action("Index", "Categories")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "")">
            <i class="fas fa-tags"></i>
            <span>Categories</span>
        </a>
        <a href="@Url.Action("Index", "Brands")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Brands" ? "active" : "")">
            <i class="fas fa-copyright"></i>
            <span>Brands</span>
        </a>
        <a href="@Url.Action("Index", "Inventory")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Inventory" ? "active" : "")">
            <i class="fas fa-warehouse"></i>
            <span>Inventory</span>
        </a>

        <div class="nav-section">Financial</div>
        <a href="@Url.Action("Index", "Payments")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Payments" ? "active" : "")">
            <i class="fas fa-credit-card"></i>
            <span>Payments</span>
        </a>
        <a href="@Url.Action("Index", "Transactions")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Transactions" ? "active" : "")">
            <i class="fas fa-exchange-alt"></i>
            <span>Transactions</span>
        </a>

        <div class="nav-section">System</div>
        <a href="@Url.Action("Index", "Users")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">
            <i class="fas fa-user-cog"></i>
            <span>Users</span>
        </a>
        <a href="@Url.Action("Index", "Settings")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")">
            <i class="fas fa-cog"></i>
            <span>Settings</span>
        </a>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navigation -->
        <header class="top-nav">
            <div class="top-nav-left">
                <button class="nav-toggle" id="navToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1>@ViewBag.PageTitle</h1>
                @if (!string.IsNullOrEmpty(ViewBag.Subtitle))
                {
                    <span class="page-subtitle">@ViewBag.Subtitle</span>
                }
            </div>
            <div class="top-nav-right">
                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search..." id="globalSearch">
                    <div class="search-loader" style="display: none;">
                        <i class="fas fa-spinner fa-spin"></i>
                    </div>
                </div>

                <div class="notifications">
                    <i class="fas fa-bell"></i>
                    <span class="notification-count">3</span>
                </div>

                <!-- User Profile Dropdown -->
                <div class="user-profile" id="userProfile">
                    <div class="user-avatar">AD</div>
                    <span class="username-text">Admin</span>
                    <i class="fas fa-chevron-down"></i>

                    <div class="user-dropdown" id="userDropdown" style="display: none;">
                        <a href="@Url.Action("Profile", "Account")" class="dropdown-item">
                            <i class="fas fa-user"></i> My Profile
                        </a>
                        <a href="@Url.Action("Index", "Settings")" class="dropdown-item">
                            <i class="fas fa-cog"></i> Settings
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="@Url.Action("Logout", "Account", new { area = "Identity" })" class="dropdown-item">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Content Area -->
        <div class="content-area">
            @RenderBody()
        </div>
    </div>

    <!-- Universal Modal -->
    <div class="modal" id="universalModal" style="display: none;">
        <div class="modal-content" id="modalContent">
            <!-- Modal content will be loaded here -->
        </div>
    </div>

    <!-- Confirmation Modal -->
    <div class="modal" id="confirmModal" style="display: none;">
        <div class="modal-content" style="max-width: 400px;">
            <div class="modal-header">
                <h3 id="confirmTitle">Confirm Action</h3>
                <button class="modal-close" onclick="closeConfirmModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage">Are you sure you want to perform this action?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeConfirmModal()">Cancel</button>
                <button class="btn btn-danger" id="confirmActionBtn">Confirm</button>
            </div>
        </div>
    </div>

    <script src="~/js/dashboard.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>