<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ecommerce Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/dashboard.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <!-- Side Navigation -->
    <nav class="side-nav" id="sideNav">
        <div class="nav-header">
            <div class="logo">LOGO</div>
            <button class="nav-close" id="navClose">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="nav-section">Main</div>
        <a href="@Url.Action("Index", "Orders")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")">
            <i class="fas fa-box"></i>
            <span>Orders</span>
        </a>
        <a href="@Url.Action("Index", "Inventory")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Inventory" ? "active" : "")">
            <i class="fas fa-warehouse"></i>
            <span>Inventory</span>
        </a>
        <a href="@Url.Action("Index", "Payments")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Payments" ? "active" : "")">
            <i class="fas fa-credit-card"></i>
            <span>Payments</span>
        </a>
        <a href="@Url.Action("Index", "Customers")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customers" ? "active" : "")">
            <i class="fas fa-users"></i>
            <span>Customers</span>
        </a>

        <div class="nav-section">General</div>
        <a href="@Url.Action("Index", "Notifications")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Notifications" ? "active" : "")">
            <i class="fas fa-bell"></i>
            <span>Notifications</span>
        </a>
        <a href="@Url.Action("Index", "Help")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Help" ? "active" : "")">
            <i class="fas fa-question-circle"></i>
            <span>Help & support</span>
        </a>
        <a href="@Url.Action("Index", "Settings")" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")">
            <i class="fas fa-cog"></i>
            <span>Settings</span>
        </a>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navigation -->
        <header class="top-nav">
            <div class="top-nav-left">
                <button class="nav-toggle" id="navToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1>@ViewBag.PageTitle</h1>
            </div>
            <div class="top-nav-right">
                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search orders..." id="globalSearch">
                    <div class="search-loader" style="display: none;">
                        <i class="fas fa-spinner fa-spin"></i>
                    </div>
                </div>

                <!-- User Profile Dropdown -->
                <div class="user-profile" id="userProfile">
                    <div class="user-avatar">JD</div>
                    <span>John Doe</span>
                    <i class="fas fa-chevron-down"></i>

                    <div class="user-dropdown" style="display: none;">
                        <a href="@Url.Action("Profile", "Account")" class="dropdown-item">
                            <i class="fas fa-user"></i> Profile
                        </a>
                        <a href="@Url.Action("Index", "Settings")" class="dropdown-item">
                            <i class="fas fa-cog"></i> Settings
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="@Url.Action("Logout", "Account")" class="dropdown-item">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Content Area -->
        <div class="content-area">
            @RenderBody()
        </div>
    </div>

    <!-- Order Details Modal -->
    <div class="modal" id="orderModal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalOrderId">Order #4567</h3>
                <button class="modal-close" id="modalClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Modal content will be loaded here -->
            </div>
        </div>
    </div>

    <script src="~/js/dashboard.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>