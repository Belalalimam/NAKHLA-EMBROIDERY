@{
    ViewBag.Title = "Orders";
    ViewBag.PageTitle = "Orders";
    ViewBag.Subtitle = "Manage and track all orders";
}

<!-- Mobile Scroll Hint -->
<div class="mobile-scroll-hint">
    <i class="fas fa-arrows-left-right"></i> Swipe horizontally to view all columns
</div>

<!-- Page Header -->
<div class="page-header">
    <div>
        <h2>Orders</h2>
        <p>Manage and track all customer orders</p>
    </div>
    <div class="header-actions">
        <button class="btn btn-secondary">
            <i class="fas fa-filter"></i> 
            <span class="btn-text">Filters</span>
        </button>
        <button class="btn btn-primary">
            <i class="fas fa-plus"></i> 
            <span class="btn-text">New Order</span>
        </button>
    </div>
</div>

<!-- Orders Statistics -->
<div class="orders-stats-container">
    <div class="orders-stat-card">
        <div class="orders-stat-title">Total Orders</div>
        <div class="orders-stat-value">1,234</div>
        <div class="orders-stat-desc">+12% from last month</div>
    </div>
    <div class="orders-stat-card">
        <div class="orders-stat-title">Revenue</div>
        <div class="orders-stat-value">$54,230</div>
        <div class="orders-stat-desc">+8% from last month</div>
    </div>
    <div class="orders-stat-card">
        <div class="orders-stat-title">Avg. Order Value</div>
        <div class="orders-stat-value">$43.98</div>
        <div class="orders-stat-desc">+2% from last month</div>
    </div>
    <div class="orders-stat-card">
        <div class="orders-stat-title">Pending Orders</div>
        <div class="orders-stat-value">24</div>
        <div class="orders-stat-desc">Require attention</div>
    </div>
</div>

<!-- Filters -->
<div class="filters">
    <div class="filter-group">
        <button class="filter-btn active">
            <span>All Orders</span>
            <span class="badge badge-primary">1,234</span>
        </button>
        <button class="filter-btn">
            <span>Shipping</span>
            <span class="badge badge-primary">842</span>
        </button>
        <button class="filter-btn">
            <span>Pickups</span>
            <span class="badge badge-warning">392</span>
        </button>
        <button class="filter-btn">
            <span>Paid</span>
            <span class="badge badge-success">987</span>
        </button>
        <button class="filter-btn">
            <span>Pending</span>
            <span class="badge badge-warning">247</span>
        </button>
    </div>
    <div class="action-buttons">
        <button class="btn btn-secondary">
            <i class="fas fa-calendar"></i> 
            <span class="btn-text">Date Range</span>
        </button>
        <button class="btn btn-secondary">
            <i class="fas fa-download"></i> 
            <span class="btn-text">Export</span>
        </button>
    </div>
</div>

