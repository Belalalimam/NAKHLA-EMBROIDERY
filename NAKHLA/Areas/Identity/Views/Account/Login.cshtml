@model NAKHLA.ViewModels.LoginVM

<div class="Samebody">
    <div class="container2">
        <div class="form-container sign-in">

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <h1>Login</h1>

                <div class="social-icons">
                    <a href="#" class="icon"><i class="ri-google-line"></i></a>
                    <a href="#" class="icon"><i class="ri-facebook-line"></i></a>
                    <a href="#" class="icon"><i class="ri-github-line"></i></a>
                    <a href="#" class="icon"><i class="ri-linkedin-line"></i></a>
                </div>

                <span>or use your account</span>

                <!-- Validation summary -->
                <div asp-validation-summary="All" class="text-danger"></div>

                <input asp-for="UserNameOREmail" placeholder="Username or Email" />
                <span asp-validation-for="UserNameOREmail" class="text-danger"></span>

                <input asp-for="Password" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>

                <button type="submit">Login</button>

                <p class="mt-3">
                    Don't have an account?
                    <a asp-action="Register" asp-controller="Account">Sign Up</a>
                </p>
            </form>

        </div>
    </div>
</div>
